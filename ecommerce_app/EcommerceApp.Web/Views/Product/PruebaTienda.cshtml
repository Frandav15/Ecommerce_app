@using EcommerceApp.Web.Views;
@model EcommerceApp.Web.Views.ProductoFiltradoViewModels;

@{
    ViewData["Title"] = "Tienda de Productos";
}

<h1 class="text-center my-4">Tienda de Productos</h1>

<div class="container mt-5">
    <form asp-action="PruebaTienda" method="get" class="mb-4 p-4 bg-light rounded shadow-sm">
        <div class="form-group">
            <input type="text" name="terminoBusqueda" value="@Model.TerminoBusqueda" class="form-control" placeholder="Buscar productos..." />
        </div>

        <div class="form-group mt-3">
            <label><strong>Categorías:</strong></label><br />
            @foreach (var categoria in Model.Categorias)
            {
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="categoriasSeleccionadas" value="@categoria.CategoryId"
                    @(Model.CategoriasSeleccionadas.Contains(categoria.CategoryId) ? "checked" : "") />
                    <label class="form-check-label">@categoria.Name</label>
                </div>
            }
        </div>

        <div class="form-group mt-3">
            <label><strong>Rango de precio:</strong></label><br />
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="rangoPrecioStr" value="" @(Model.RangoPrecio == 0 ? "checked" : "") />
                <label class="form-check-label">Todos</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="rangoPrecioStr" value="1" @(Model.RangoPrecio == 1 ? "checked" : "") />
                <label class="form-check-label">Menos de 100</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="rangoPrecioStr" value="2" @(Model.RangoPrecio == 2 ? "checked" : "") />
                <label class="form-check-label">Entre 100 y 500</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="rangoPrecioStr" value="3" @(Model.RangoPrecio == 3 ? "checked" : "") />
                <label class="form-check-label">Más de 500</label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Buscar</button>
    </form>
</div>

<div class="row">
    @if (Model.Productos != null && Model.Productos.Any())
    {
        foreach (var product in Model.Productos)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 400px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">Cantidad: @product.StockQuantity</p>
                        <p class="card-text">Categoría: @product.Category?.Name</p>
                        <p class="card-text">Precio: @product.Price.ToString("C")</p>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <p class="text-center">No hay productos disponibles.</p>
        </div>
    }
</div>

<!-- Paginación -->
<div class="d-flex justify-content-center my-4">
    <nav>
        <ul class="pagination">
            @if (Model.PaginaActual > 1)
            {
                <li class="page-item">
                    <form method="get" asp-action="PruebaTienda" class="d-inline">
                        <input type="hidden" name="pagina" value="@(Model.PaginaActual - 1)" />
                        <input type="hidden" name="terminoBusqueda" value="@Model.TerminoBusqueda" />
                        @foreach (var catId in Model.CategoriasSeleccionadas)
                        {
                            <input type="hidden" name="categoriasSeleccionadas" value="@catId" />
                        }
                        <input type="hidden" name="rangoPrecioStr" value="@Model.RangoPrecio" />
                        <button type="submit" class="page-link">Anterior</button>
                    </form>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPaginas; i++)
            {
                <li class="page-item @(Model.PaginaActual == i ? "active" : "")">
                    <form method="get" asp-action="PruebaTienda" class="d-inline">
                        <input type="hidden" name="pagina" value="@i" />
                        <input type="hidden" name="terminoBusqueda" value="@Model.TerminoBusqueda" />
                        @foreach (var catId in Model.CategoriasSeleccionadas)
                        {
                            <input type="hidden" name="categoriasSeleccionadas" value="@catId" />
                        }
                        <input type="hidden" name="rangoPrecioStr" value="@Model.RangoPrecio" />
                        <button type="submit" class="page-link">@i</button>
                    </form>
                </li>
            }

            @if (Model.PaginaActual < Model.TotalPaginas)
            {
                <li class="page-item">
                    <form method="get" asp-action="PruebaTienda" class="d-inline">
                        <input type="hidden" name="pagina" value="@(Model.PaginaActual + 1)" />
                        <input type="hidden" name="terminoBusqueda" value="@Model.TerminoBusqueda" />
                        @foreach (var catId in Model.CategoriasSeleccionadas)
                        {
                            <input type="hidden" name="categoriasSeleccionadas" value="@catId" />
                        }
                        <input type="hidden" name="rangoPrecioStr" value="@Model.RangoPrecio" />
                        <button type="submit" class="page-link">Siguiente</button>
                    </form>
                </li>
            }
        </ul>
    </nav>
</div>