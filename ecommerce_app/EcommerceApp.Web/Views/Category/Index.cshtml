@model IEnumerable<Ecommerce.Domain.Entities.Category>

@{
    ViewData["Title"] = "Lista de Categorías";
}

<h1>@ViewData["Title"]</h1>

<a asp-action="Create" class="btn btn-success">Crear Nueva Categoría</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No hay categorías disponibles.</td>
            </tr>
        }
    </tbody>
</table>


